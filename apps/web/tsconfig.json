{
  "extends": "@marinhomich/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./contentlayer.config.js",
    ".contentlayer/generated"
  ],
  "exclude": [
    "node_modules"
  ]
}